{
  "name": "@yarn-tool/changelog",
  "version": "1.0.6",
  "description": "",
  "homepage": "https://github.com/bluelovers/ws-yarn-workspaces/tree/master/packages/@yarn-tool/changelog#readme",
  "bugs": {
    "url": "https://github.com/bluelovers/ws-yarn-workspaces/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluelovers/ws-yarn-workspaces.git"
  },
  "license": "ISC",
  "author": "bluelovers",
  "main": "index.js",
  "bin": {
    "changelog": "bin/changelog.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "coverage": "npx nyc yarn run test",
    "lint": "npx eslint **/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:jest": "jest --coverage",
    "test:mocha": "npx mocha --require ts-node/register \"!(node_modules)/**/*.{test,spec}.{ts,tsx}\"",
    "npm:publish": "npm publish",
    "npm:publish:lerna": "lerna publish --yes --bump patch",
    "prepublish:lockfile": "npx sync-lockfile .",
    "prepublishOnly_": "yarn run ncu && yarn run sort-package-json && yarn run test",
    "postpublish_": "git commit -m \"chore(release): publish & git push & echo postpublish\" .",
    "ncu": "npx yarn-tool ncu -u",
    "sort-package-json": "npx yarn-tool sort",
    "tsc:default": "tsc -p tsconfig.json",
    "tsc:esm": "tsc -p tsconfig.esm.json"
  },
  "dependencies": {
    "@lerna/conventional-commits": "^3.22.0",
    "@yarn-tool/find-root": "^1.0.20",
    "@yarn-tool/semver-diff": "^1.0.4",
    "@yarn-tool/table": "^1.0.8",
    "lodash": "^4.17.15",
    "path-is-same": "^1.0.2",
    "ts-type": "^1.2.23",
    "upath2": "^3.0.5",
    "ws-pkg-list": "^1.0.26",
    "yargs": "*"
  },
  "peerDependencies": {
    "@bluelovers/conventional-changelog-bluelovers": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
